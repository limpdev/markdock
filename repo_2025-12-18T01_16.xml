/* ========================================
   NEWS CONTAINER
======================================== */
.news-container {
    width: 100%;
    height: 100%;
    overflow-y: auto;
    padding: 20px;
    transition: background-color 0.2s, color 0.2s;
}
.news-dark {
    background-color: #0F0F0F;
    color: #e0e0e0;
}
.news-light {
    background-color: #FFFFFF;
    color: #333333;
}
/* Custom Scrollbar */
.news-container::-webkit-scrollbar {
    width: 8px;
}
.news-dark::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
}
.news-light::-webkit-scrollbar-track {
    background: rgba(0, 0, 0, 0.05);
}
.news-dark::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 4px;
}
.news-light::-webkit-scrollbar-thumb {
    background: rgba(0, 0, 0, 0.2);
    border-radius: 4px;
}
.news-dark::-webkit-scrollbar-thumb:hover {
    background: rgba(255, 255, 255, 0.3);
}
.news-light::-webkit-scrollbar-thumb:hover {
    background: rgba(0, 0, 0, 0.3);
}
/* ========================================
   NEWS HEADER
======================================== */
.news-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}
.news-light .news-header {
    border-bottom-color: rgba(0, 0, 0, 0.1);
}
.news-header h2 {
    font-size: 24px;
    font-weight: 700;
    margin: 0;
}
.news-count {
    font-size: 14px;
    padding: 4px 12px;
    border-radius: 12px;
    background-color: rgba(41, 98, 255, 0.1);
    color: #2962FF;
    font-weight: 600;
}
/* ========================================
   NEWS GRID
======================================== */
.news-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: 20px;
    margin-bottom: 24px;
}
/* ========================================
   NEWS CARD
======================================== */
.news-card {
    display: flex;
    flex-direction: column;
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    background-color: rgba(255, 255, 255, 0.03);
}
.news-light .news-card {
    border-color: rgba(0, 0, 0, 0.1);
    background-color: rgba(0, 0, 0, 0.02);
}
.news-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
}
.news-dark .news-card:hover {
    border-color: rgba(255, 255, 255, 0.2);
    background-color: rgba(255, 255, 255, 0.05);
}
.news-light .news-card:hover {
    border-color: rgba(0, 0, 0, 0.15);
    background-color: rgba(0, 0, 0, 0.04);
}
/* ========================================
   NEWS IMAGE
======================================== */
.news-image {
    width: 100%;
    height: 200px;
    overflow: hidden;
    background-color: rgba(255, 255, 255, 0.05);
}
.news-light .news-image {
    background-color: rgba(0, 0, 0, 0.05);
}
.news-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
}
.news-card:hover .news-image img {
    transform: scale(1.05);
}
/* ========================================
   NEWS CONTENT
======================================== */
.news-content {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
}
/* ========================================
   NEWS META
======================================== */
.news-meta {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: rgba(255, 255, 255, 0.6);
}
.news-light .news-meta {
    color: rgba(0, 0, 0, 0.6);
}
.news-source {
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}
.news-divider {
    opacity: 0.5;
}
.news-time {
    font-weight: 400;
}
/* ========================================
   NEWS TITLE
======================================== */
.news-title {
    margin: 0;
    font-size: 18px;
    font-weight: 700;
    line-height: 1.4;
}
.news-title a {
    color: inherit;
    text-decoration: none;
    transition: color 0.2s;
}
.news-title a:hover {
    color: #2962FF;
}
/* ========================================
   NEWS DESCRIPTION
======================================== */
.news-description {
    font-size: 14px;
    line-height: 1.6;
    margin: 0;
    color: rgba(255, 255, 255, 0.7);
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
}
.news-light .news-description {
    color: rgba(0, 0, 0, 0.7);
}
/* ========================================
   NEWS CATEGORIES
======================================== */
.news-categories {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: auto;
}
.news-category-tag {
    font-size: 11px;
    padding: 4px 10px;
    border-radius: 12px;
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.8);
    font-weight: 600;
    text-transform: capitalize;
}
.news-light .news-category-tag {
    background-color: rgba(0, 0, 0, 0.08);
    color: rgba(0, 0, 0, 0.7);
}
/* ========================================
   READ MORE LINK
======================================== */
.news-read-more {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    font-size: 14px;
    font-weight: 600;
    color: #2962FF;
    text-decoration: none;
    transition: all 0.2s;
    margin-top: 8px;
}
.news-read-more:hover {
    gap: 8px;
}
.news-read-more svg {
    transition: transform 0.2s;
}
.news-read-more:hover svg {
    transform: translateX(2px);
}
/* ========================================
   LOADING STATE
======================================== */
.news-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 16px;
}
.spinner {
    width: 48px;
    height: 48px;
    border: 4px solid rgba(255, 255, 255, 0.1);
    border-top-color: #2962FF;
    border-radius: 50%;
    animation: spin 1s linear infinite;
}
.news-light .spinner {
    border-color: rgba(0, 0, 0, 0.1);
    border-top-color: #2962FF;
}
@keyframes spin {
    to { transform: rotate(360deg); }
}
.news-loading p {
    font-size: 16px;
    font-weight: 500;
}
/* ========================================
   ERROR STATE
======================================== */
.news-error {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 12px;
    text-align: center;
}
.news-error svg {
    color: #FF5252;
}
.news-error p {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}
.news-error span {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
}
.news-light .news-error span {
    color: rgba(0, 0, 0, 0.6);
}
/* ========================================
   EMPTY STATE
======================================== */
.news-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    gap: 12px;
    text-align: center;
}
.news-empty svg {
    color: rgba(255, 255, 255, 0.4);
}
.news-light .news-empty svg {
    color: rgba(0, 0, 0, 0.4);
}
.news-empty p {
    font-size: 18px;
    font-weight: 600;
    margin: 0;
}
.news-empty span {
    font-size: 14px;
    color: rgba(255, 255, 255, 0.6);
}
.news-light .news-empty span {
    color: rgba(0, 0, 0, 0.6);
}
/* ========================================
   FOOTER
======================================== */
.news-footer {
    text-align: center;
    padding: 20px;
    font-size: 13px;
    color: rgba(255, 255, 255, 0.5);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}
.news-light .news-footer {
    color: rgba(0, 0, 0, 0.5);
    border-top-color: rgba(0, 0, 0, 0.1);
}
.news-footer a {
    color: #2962FF;
    text-decoration: none;
    font-weight: 600;
}
.news-footer a:hover {
    text-decoration: underline;
}
/* ========================================
   RESPONSIVE DESIGN
======================================== */
@media (max-width: 768px) {
    .news-grid {
        grid-template-columns: 1fr;
    }
    .news-header h2 {
        font-size: 20px;
    }
    .news-container {
        padding: 16px;
    }
}
